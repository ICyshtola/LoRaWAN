<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoverPassword.ForgetChoice">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:text="请选择合适的方式找回您的密码："
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/use_email"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/use_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过邮件找回"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/use_phone"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/use_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:layout_marginBottom="8dp"
        android:text="通过手机号找回"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082"
        tools:layout_editor_absoluteX="0dp" />



</android.support.constraint.ConstraintLayout>